<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image url</dt>
      <dd><img src="<%= @actor.image_url %>"></dd>


      <dt>Name</dt>

      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= truncate(@actor.bio) %></dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>



<form action="/create_actor" method="post">
  <!-- Hidden input for authenticity token to protect from forgery -->
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="control-label">
      Name
    </label>

    <input type="hidden" id="name" name="name" placeholder="Name" class="form-control" >
  </div>

  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob" class="control-label">
      Dob
    </label>

    <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control" value="<%= @actor.dob %>">
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="bio" class="control-label">
      Bio
    </label>

    <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="control-label">
      Image url
    </label>

    <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @actor.image_url %>">
  </div>

  <button class="btn btn-success">
    Create Actor
  </button>
  or
  <a href="/actors">Cancel</a>
</form>
